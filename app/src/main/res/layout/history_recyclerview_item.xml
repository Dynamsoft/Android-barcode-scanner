<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:layout_editor_absoluteY="25dp">

	<ImageView
		android:id="@+id/iv_codeimg"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@android:drawable/ic_delete"/>

	<TextView
		android:id="@+id/tv_codeformat"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		android:text="code format"
		app:layout_constraintBottom_toTopOf="@+id/tv_codetext"
		app:layout_constraintStart_toEndOf="@+id/imageView"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_chainStyle="packed"/>

	<TextView
		android:id="@+id/tv_codetext"
		android:layout_width="wrap_content"
		android:layout_height="16dp"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		android:text="text"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@+id/imageView"
		app:layout_constraintTop_toBottomOf="@+id/tv_codeformat"
		/>

</android.support.constraint.ConstraintLayout>