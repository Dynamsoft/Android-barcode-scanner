<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="100dp">

	<ImageView
		android:id="@+id/iv_codeimg"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@android:drawable/ic_delete"/>

	<TextView
		android:id="@+id/tv_codetext"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:layout_marginEnd="8dp"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="8dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:maxLength="20"
		android:text="text"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toEndOf="@+id/iv_codeimg"
		app:layout_constraintTop_toBottomOf="@+id/tv_codeformat"/>

	<TextView
		android:id="@+id/tv_codeformat"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="24dp"
		android:text="code format"
		android:maxLength="20"
		app:layout_constraintStart_toStartOf="@+id/tv_codetext"
		app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>