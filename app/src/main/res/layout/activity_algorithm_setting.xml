<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <android.support.v7.widget.Toolbar
        android:id="@+id/algorithmtoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@drawable/ic_action_back"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/textview_width"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:text="@string/connectedblock" />
                <CheckBox
                    android:id="@+id/ckbconnectedblock"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="@dimen/textview_width"/>
                <TextView
                    android:id="@+id/tvconnectedblock"
                    android:textColor="@color/colorPrimaryDark"
                    android:width="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="15sp"/>
            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/borden_height"
                android:background="#fff3f3f3" />
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/textview_width"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:text="@string/lines" />
                <CheckBox
                    android:id="@+id/ckblines"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="@dimen/textview_width"/>
                <TextView
                    android:id="@+id/tvlines"
                    android:textColor="@color/colorPrimaryDark"
                    android:width="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="15sp"/>
            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/borden_height"
                android:background="#fff3f3f3" />
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/textview_width"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:text="@string/statistics" />
                <CheckBox
                    android:id="@+id/ckbstatistics"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="@dimen/textview_width"/>
                <TextView
                    android:id="@+id/tvstatistics"
                    android:textColor="@color/colorPrimaryDark"
                    android:width="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="15sp"/>
            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/borden_height"
                android:background="#fff3f3f3" />
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/textview_width"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:text="@string/fullimageasbarcodezone" />
                <CheckBox
                    android:id="@+id/ckbfullimageasbarcodezone"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="@dimen/textview_width" />
                <TextView
                    android:id="@+id/tvfullimageasbarcodezone"
                    android:textColor="@color/colorPrimaryDark"
                    android:width="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="15sp"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>


