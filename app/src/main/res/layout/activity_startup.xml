<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffffff"
	android:onClick="onViewClicked"
	tools:layout_editor_absoluteY="25dp">

	<Button
		android:id="@+id/btn_history"
		android:layout_width="28dp"
		android:layout_height="28dp"
		android:layout_marginEnd="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginTop="24dp"
		android:background="@drawable/icon_history"
		android:textColor="#000000"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<TextView
		android:id="@+id/tv_startup_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="24dp"
		android:layout_marginStart="24dp"
		android:layout_marginTop="75dp"
		android:text="Barcode Scanner X"
		android:textColor="@android:color/black"
		android:textSize="20sp"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<Button
		android:id="@+id/btn_general"
		android:layout_width="@dimen/btn_startup_size"
		android:layout_height="@dimen/btn_startup_size"
		android:layout_marginLeft="32dp"
		android:layout_marginStart="32dp"
		android:layout_marginTop="50dp"
		android:background="@drawable/ico_generalscan"
		android:onClick="onClick"
		android:paddingTop="70dp"
		android:text="@string/general_scan"
		android:textAllCaps="false"
		android:textColor="#000000"
		android:textSize="12sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tv_startup_title"/>

	<Button
		android:id="@+id/btn_multi_best"
		android:layout_width="@dimen/btn_startup_size"
		android:layout_height="@dimen/btn_startup_size"
		android:layout_marginEnd="32dp"
		android:layout_marginRight="32dp"
		android:layout_marginTop="50dp"
		android:background="@drawable/ico_multibarcodesbestcoverage"
		android:onClick="onClick"
		android:paddingTop="74dp"
		android:text="@string/multi_barcodes_best_coverage"
		android:textAllCaps="false"
		android:textColor="#000000"
		android:textSize="12sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tv_startup_title"/>

	<Button
		android:id="@+id/btn_multi_bal"
		android:layout_width="@dimen/btn_startup_size"
		android:layout_height="@dimen/btn_startup_size"
		android:layout_marginLeft="32dp"
		android:layout_marginStart="32dp"
		android:layout_marginTop="68dp"
		android:background="@drawable/ico_balancedmode"
		android:onClick="onClick"
		android:paddingTop="74dp"
		android:text="@string/multi_barcodes_balanced_mode"
		android:textAllCaps="false"
		android:textColor="#000000"
		android:textSize="12sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/btn_general"/>

	<Button
		android:id="@+id/btn_panorama"
		android:layout_width="@dimen/btn_startup_size"
		android:layout_height="@dimen/btn_startup_size"
		android:layout_marginEnd="32dp"
		android:layout_marginRight="32dp"
		android:layout_marginTop="68dp"
		android:background="@drawable/ico_balancedmode"
		android:onClick="onClick"
		android:paddingTop="74dp"
		android:text="@string/multi_barcodes_balanced_mode"
		android:textAllCaps="false"
		android:textColor="#000000"
		android:textSize="12sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/btn_general" />

	<TextView
		android:id="@+id/tv_history"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:text="Dynamsoft Barcode Scanner X"
		android:textColor="#BEBFC0"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"/>

	<View
		android:layout_width="395dp"
		android:layout_height="1dp"
		android:layout_marginBottom="50dp"
		android:background="#DDDDDD"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>