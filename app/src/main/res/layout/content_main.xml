<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context=".dynamsoftbarcodereaderdemo.MainActivity"
	tools:showIn="@layout/activity_main">
	<com.otaliastudios.cameraview.CameraView
		android:id="@+id/cameraView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:keepScreenOn="true"/>

	<com.dynamsoft.demo.dynamsoftbarcodereaderdemo.QRCodeView
		android:id="@+id/qr_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/scanCountText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="62dp"
			android:text="0 Scanned"
			android:textColor="#ffffff"
			android:textSize="20sp" />
	</com.dynamsoft.demo.dynamsoftbarcodereaderdemo.QRCodeView>
	<TextView
		android:id="@+id/tv_flash"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:layout_marginBottom="100dp"
		android:text="Flash"
		android:textColor="#ffffff"
		android:textSize="20sp"/>

</FrameLayout>