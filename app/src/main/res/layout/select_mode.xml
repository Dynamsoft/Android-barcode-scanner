<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:text="Select Mode"
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/border_general"
        android:orientation="vertical"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="89dp"
        android:background="#92D092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/select_general"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="90dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_generalscan"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/general_scan"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/border_best_coverage"
        android:orientation="horizontal"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginRight="49dp"
        android:layout_marginTop="89dp"
        android:background="#92D092"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/select_best_coverage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="90dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_bestcoverage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/multi_barcodes_best_coverage"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/border_overlap"
        android:orientation="horizontal"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="229dp"
        android:background="#92D092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>
    <LinearLayout

        android:id="@+id/select_overlap"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="230dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_overlap"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/overlap"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/border_custom"
        android:orientation="horizontal"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginRight="49dp"
        android:layout_marginTop="229dp"
        android:background="#92D092"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>
    <LinearLayout

        android:id="@+id/select_custom"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="230dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"

            android:layout_marginTop="10dp"
            android:src="@drawable/icon_customized" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/custom"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="340dp"
        app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>
</android.support.constraint.ConstraintLayout>